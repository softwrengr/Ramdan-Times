<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.ClockFragment">

    <com.iigo.library.ClockView
        android:id="@+id/clockView"
        app:minute_hand_color="@color/colorPrimary"
        app:hour_hand_color="@color/colorPrimary"
        app:center_point_color="@color/colorPrimary"
        app:ear_color="@color/colorPrimary"
        app:edge_color="@color/colorPrimary"
        app:foot_color="@color/colorPrimary"
        app:head_color="@color/colorPrimary"
        app:scale_color="@color/colorPrimary"
        app:second_hand_color="@color/colorPrimary"
        android:layout_centerInParent="true"
        android:layout_width="200dp"
        android:layout_height="200dp" />


    <RelativeLayout
        android:id="@+id/timing_layout"
        android:layout_below="@id/clockView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:id="@+id/sehar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/green"
            android:layout_marginLeft="10sp"
            android:text="Sehar"/>

        <TextView
            android:id="@+id/sehri_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/sehar"
            android:layout_marginLeft="20sp"
            android:textColor="@color/black"
            android:text=""/>

        <TextView
            android:id="@+id/iftar_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="10sp"
            android:textColor="@color/black"
            android:text=""/>

        <TextView
            android:id="@+id/iftar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/iftar_time"
            android:layout_marginRight="20sp"
            android:textColor="@color/black"
            android:text="Iftar"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_countdown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/timing_layout"
        android:layout_marginTop="20sp"
        android:text="Time Remaing"
        android:textSize="22sp"
        android:textStyle="bold"/>

</RelativeLayout>